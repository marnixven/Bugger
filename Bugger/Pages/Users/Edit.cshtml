@page "{id:min(1)?}"
@model Bugger.Pages.Users.EditModel
@{
    var pageHeader = Model.SingleUser.Id > 0 ? "Edit" : "Create";
}

<h1>@pageHeader</h1>

<form method="post" class="mt-4">
    <input hidden asp-for="SingleUser.Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="SingleUser.FullName" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="SingleUser.FullName" class="form-control" placeholder="Name" />
            <span asp-validation-for="SingleUser.FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SingleUser.UserName" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="SingleUser.UserName" class="form-control" placeholder="Username" />
            <span asp-validation-for="SingleUser.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SingleUser.EmailAddress" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="SingleUser.EmailAddress" class="form-control" placeholder="Email" />
            <span asp-validation-for="SingleUser.EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SingleUser.Created" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="SingleUser.Created" class="form-control" placeholder="Email" />
        </div>
    </div>
    <div class="form-group row">
        <div class="row-cols-sm-1">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Users/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
